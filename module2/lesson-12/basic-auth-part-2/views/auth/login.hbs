<form action="/auth/login" method="post">

    <label> Username
      <input type="text" name="username"  placeholder="ironhacker" />
    </label>
 
 
    <label> Password
      <input type="password" name="password" placeholder="********" required />
    </label>
 
    <button type="submit">Login</button>

     {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
</form>